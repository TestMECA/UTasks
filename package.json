{
  "name": "utasks",
  "version": "0.1.0",
  "private": true,
  "homepage": ".",
  "dependencies": {
    "bootstrap": "4.5.2",
    "firebase": "^9.5.0",
    "moment": "^2.29.1",
    "node-sass": "4.14.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-bootstrap": "1.3.0",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-router-dom": "5.2.0",
    "react-scripts": "4.0.3",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "lint": "eslint src/",
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "start": "react-scripts -r @cypress/instrument-cra start",
    "build": "GENERATE_SOURCEMAP=false react-scripts build",
    "winBuild:prod": "set \"GENERATE_SOURCEMAP=false\" && react-scripts build",
    "build:prod": "react-scripts build",
    "winBuild": "react-scripts build",
    "eject": "react-scripts eject",
    "local:build:dev": "firebase use DEV && firebase apps:sdkconfig web --json > ./src/utasks-configuration.json && yarn run winBuild",
    "firebase:local:deploy": "firebase emulators:start --only hosting:utasks-develop",
    "test": "react-scripts test",
    "test:watch": "jest --watch",
    "cy:open": "cypress open",
    "cy:run": "cypress run --reporter mochawesome",
    "code:test:report": "node report.config.js",
    "precopy:reports": "shx mkdir cypress/reports/coverage || true ",
    "copy:reports": "shx cp cypress/reports/cy-coverage/coverage-final.json cypress/reports/coverage/cypress-coverage.json && shx cp cypress/reports/jest-coverage/coverage-final.json cypress/reports/coverage/jest-coverage.json",
    "precombine:reports": "yarn run copy:reports",
    "combine:reports": "nyc merge cypress/reports/coverage  coverage/combined-coverage.json",
    "precode:coverage:report": "yarn run combine:reports",
    "code:coverage:report": "nyc report --temp-dir=coverage --reporter=text-summary --reporter=lcov --report-dir=coverage",
    "remove:reports": "shx rm -rf cypress/reports/** || true"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,scss,md}": [
      "prettier --write"
    ]
  },
  "nyc": {
    "report-dir": "cypress/reports/cy-coverage",
    "temp-dir": "cypress/reports/cy-coverage/.nyc_output",
    "reporter": [
      "json",
      "text-summary",
      "lcov"
    ],
    "all": true,
    "include": "src/**/*.js",
    "exclude": "src/**/*.test.{js,ts,jsx,tsx}"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.9.9",
    "@cypress/instrument-cra": "^1.4.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "cypress": "^9.1.1",
    "cypress-file-upload": "^5.0.8",
    "dotenv-cli": "^4.1.1",
    "eslint": "7.32.0",
    "eslint-import-resolver-babel-module": "^5.3.1",
    "eslint-plugin-chai-friendly": "^0.7.1",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-spellcheck": "^0.0.19",
    "firebase-tools": "^9.23.0",
    "mochawesome": "7.0.1",
    "mochawesome-merge": "^4.2.0",
    "mochawesome-report-generator": "^6.0.1",
    "prettier": "^2.4.1",
    "react-test-renderer": "^17.0.2",
    "shx": "^0.3.3",
    "source-map-explorer": "^2.5.2"
  }
}
